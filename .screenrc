# Chunyu <chunyu@hit.edu.cn>'s .screenrc, created on 2005/08/05 on chunyu.hit.edu.cn. -*- conf-unix -*-

  startup_message off			# no startup message.
  nethack off	       			# nethack style message.
  deflogin on				# 默认 logoff.
  defflow off				# 
  vbell off				# default: off.
  vbell_msg "   -- Ring, Ring!! --   "	# default: "Wuff,Wuff!!".

  escape ``				# 默认的 command char.
  autodetach on				# default: on.
  crlf off				# default: off # Affects the copying of text regions.
  defscrollback 1000			# default: 100.
  msgwait 8				# message wait: 5 seconds.
  logfile ~/.var/screen_%Y-%m-%d_%0c    # log files.
  shell bash				# 默认 shell
  #silencewait 15			# default: 30
  activity "Activity in %n (%t) [%w:%s]~"
  pow_detach_msg "Screen session of \$LOGNAME \$:cr:\$:nl:ended."

  caption always "%{rw}%n%f %t %{wk} | %?%-Lw%?%{wb}[%n*%f %t]%?(%u)%?%{wk}%?%+Lw%? %{wk} %= %{+b rk}[%{wk}%H%{rk}]%{gk} %c %{yk}%Y-%m-%d"
#  caption always "%Y/%m/%d/ %0c%{=b kW}  %l  %{=r kd}%-Lw%{= bd}%50>%n%f* %t%{-}%+Lw%<%{- Wk}"
#  caption always "[%H] %{=r kd}%-Lw%{= bd}%50>%n%f* %t%{-}%+Lw%<%{- Wk}"
#  hardstatus alwayslastline "%{+b kr}host: %{kw}%H %{kg} | %c | %{ky}%d.%m.%Y | %{kr}(load: %l)%-0=%{kw}"

  bind e screen -t 'emacs' 3 emacs	# `e = emacs
  bind R screen -t '% |root:' 4 su	# `R = su root
  bind E screen -t 'EMACS' 5 sudo emacs	# `E = sudo emacs
  bind b screen -t 'BBS' ssh bbs	# `b = ssh bbs
  bind t screen -t 'fetchmail' 9 fetchmail -d 0 -v #
  bind f screen sshfix

  bind k
  bind ^k
  bind ^g
  bind 'K' kill
  bind 'I' login on
  bind 'O' login off
  bind ^] paste [.]
  bind = resize =		# `S `=
  bind + resize +3		# `S `+
  bind - resize -3		# `S `-
  bindkey -k F1 prev		# F11 prev
  bindkey -k F2 next		# F12 next

# Yet another hack:
# Prepend/append register [/] to the paste if ^a^] is pressed.
# This lets me have autoindent mode in vi.
#  register [ "\033:se noai\015a"
#  register ] "\033:se ai\015a"


# XTERM TWEAKS
# ===============================================================

# xterm understands both im/ic and doesn't have a status line.
# Note: Do not specify im and ic in the real termcap/info file as
# some programs (e.g. vi) will not work anymore.
  termcap  xterm hs@:cs=\E[%i%d;%dr:im=\E[4h:ei=\E[4l
  terminfo xterm hs@:cs=\E[%i%p1%d;%p2%dr:im=\E[4h:ei=\E[4l

# 80/132 column switching must be enabled for ^AW to work
# change init sequence to not switch width
  termcapinfo  xterm Z0=\E[?3h:Z1=\E[?3l:is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l

# Make the output buffer large for (fast) xterms.
# termcapinfo xterm* OL=10000
  termcapinfo xterm* OL=100

# tell screen that xterm can switch to dark background and has function
# keys.
  termcapinfo xterm 'VR=\E[?5h:VN=\E[?5l'
  termcapinfo xterm 'k1=\E[11~:k2=\E[12~:k3=\E[13~:k4=\E[14~'
  termcapinfo xterm 'kh=\EOH:kI=\E[2~:kD=\E[3~:kH=\EOF:kP=\E[5~:kN=\E[6~'

# special xterm hardstatus: use the window title.
  termcapinfo xterm 'hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007'

#terminfo xterm 'vb=\E[?5h$<200/>\E[?5l'
  termcapinfo xterm 'vi=\E[?25l:ve=\E[34h\E[?25h:vs=\E[34l'

# emulate part of the 'K' charset
  termcapinfo xterm 'XC=K%,%\E(B,[\304,\\\\\326,]\334,{\344,|\366,}\374,~\337'

# XTERM-256color TWEAKS
# ===============================================================

# xterm understands both im/ic and doesn't have a status line.
# Note: Do not specify im and ic in the real termcap/info file as
# some programs (e.g. vi) will not work anymore.
  termcap  xterm-256color hs@:cs=\E[%i%d;%dr:im=\E[4h:ei=\E[4l
  terminfo xterm-256color hs@:cs=\E[%i%p1%d;%p2%dr:im=\E[4h:ei=\E[4l

# 80/132 column switching must be enabled for ^AW to work
# change init sequence to not switch width
  termcapinfo  xterm-256color Z0=\E[?3h:Z1=\E[?3l:is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l

# Make the output buffer large for (fast) xterms.
# termcapinfo xterm-256color* OL=10000
  termcapinfo xterm-256color* OL=100

# tell screen that xterm can switch to dark background and has function
# keys.
  termcapinfo xterm-256color 'VR=\E[?5h:VN=\E[?5l'
  termcapinfo xterm-256color 'k1=\E[11~:k2=\E[12~:k3=\E[13~:k4=\E[14~'
  termcapinfo xterm-256color 'kh=\EOH:kI=\E[2~:kD=\E[3~:kH=\EOF:kP=\E[5~:kN=\E[6~'

# special xterm hardstatus: use the window title.
  termcapinfo xterm-256color 'hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007'

#terminfo xterm 'vb=\E[?5h$<200/>\E[?5l'
  termcapinfo xterm-256color 'vi=\E[?25l:ve=\E[34h\E[?25h:vs=\E[34l'

# emulate part of the 'K' charset
  termcapinfo xterm-256color 'XC=K%,%\E(B,[\304,\\\\\326,]\334,{\344,|\366,}\374,~\337'

# xterm-52 tweaks:
# - uses background color for delete operations
  termcapinfo xterm* be

# Chunyu's .screenrc ends here.
